upstream mtghub {
  server unix:///home/root/apps/mtghub/shared/pids/mtghub-puma.sock;
}

server {
  listen 80;
  server_name www.mtghub.com mtghub.com;

  keepalive_timeout 5;

  root <%= current_path %>/public;

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  location / {
    proxy_pass http://mtghub;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 10;
}
