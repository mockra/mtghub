<% if @type == 'sideboard' %>
    var div = "<div class='mana-cost'>";
    var text = div + "<%= escape_javascript(render @card) %></div>";
    $('.sideboard').append(text);
<% elsif @card.land? %>
    var div = "<div class='mana-cost'>";
    var text = div + "<%= escape_javascript(render @card) %></div>";
    $('.lands').append(text);
<% else %>
  var cmc = $('.cards .mana-cost.<%= @card.cmc %>');

  if (cmc.length) {
    cmc.append("<%= escape_javascript(render @card) %>");
  } else {
    var div = "<div class='mana-cost <%= @card.cmc %>'>";
    var text = div + "<%= escape_javascript(render @card) %></div>";
    $('.cards').append(text);
  }
<% end %>
